{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "mapRoot": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "stripInternal": true,
    "target": "esnext"
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "packages/**/dist",
    "packages/**/node_modules",
    "node_modules"
  ]
}
